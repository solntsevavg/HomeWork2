<Window x:Class="Task2_10_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2_10_1"
        xmlns:vm="clr-namespace:Task2_10_1.ViewModel"
        
        mc:Ignorable="d"
        Title="Система входа" Height="450" Width="400">
    <Window.Resources>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <vm:MainWindowViewModel x:Key="ViewModel"/>
    </Window.Resources>

    <Window.DataContext>
        <StaticResource ResourceKey="ViewModel"/>

    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Форма входа" 
             FontSize="22" Margin="10,20,5,10"
                 FontWeight="Bold"
             Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

        <TextBlock Text="Логин:" 
             FontSize="16" Margin="10,5,5,5"
             Grid.Row="1" Grid.Column="0" />
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                 Margin="10,5,5,5"
                 Grid.Row="1" Grid.Column="1"/>

        <TextBlock Text="Пароль:" 
                 FontSize="16" Margin="10,5,5,5"
                 Grid.Row="2" Grid.Column="0" />
        <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
         Margin="10,5,5,5"
         Grid.Row="2" Grid.Column="1"/>

        <Button  Command="{Binding LoginCommand}" 
                Grid.Row="3"  Grid.Column="0" Grid.ColumnSpan="2"
            Margin="5"
                Width="100" Height="30"
                Content="Войти"/>

        <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                Padding="15" Margin="20"
                Background="{Binding IsSuccess, Converter={StaticResource BoolToColorConverter}}"
                  CornerRadius="5">
            <TextBlock Text="{Binding StatusMessage}" 
                     Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                     VerticalAlignment="Center"
                     TextAlignment="Center"
                      FontSize="14" 
                     Foreground="White" FontWeight="Bold"/>
        </Border>
    </Grid>
</Window>
